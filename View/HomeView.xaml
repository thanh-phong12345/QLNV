<UserControl x:Class="QuanLyNhanVien.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyNhanVien.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="641" d:DesignWidth="1300"
             
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             x:Name="Home">
    <Border BorderThickness="0" BorderBrush="#FFF9FBE7" CornerRadius="0 0 10 10">
        <Grid>
            <Button 
                    Width="50" Height="50"
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                    Margin="20 0 0 0" Background="Transparent"
                    BorderThickness="0" Click="left_Click">
                <Button.Clip>
                    <RectangleGeometry Rect="0,0,50,50" RadiusX="50" RadiusY="50">
                    </RectangleGeometry>
                </Button.Clip>
                <!--<materialDesign:PackIcon Kind="ChevronLeftCircleOutline" Width="50"
                                         Height="50"
                                         Foreground="White" Opacity="0.7" />-->
            </Button>
            <Button Width="50" Height="50"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Margin="0 0 20 0" Background="Transparent"
                    BorderThickness="0" Click="right_Click">
                <Button.Clip>
                    <RectangleGeometry Rect="0,0,50,50" RadiusX="50" RadiusY="50">
                    </RectangleGeometry>
                </Button.Clip>
                <!--<materialDesign:PackIcon Kind="ChevronRightCircleOutline" Width="50"
                                         Height="50"
                                         Foreground="White" Opacity="0.7"/>-->
            </Button>
        </Grid>
    </Border>
</UserControl>
