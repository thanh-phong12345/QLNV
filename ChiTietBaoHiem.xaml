<Window x:Class="QuanLyNhanVien.WindowView.ChiTietBaoHiem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanVien"
        mc:Ignorable="d"
        Title="DangNhap" Height="300" Width="600"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent" 
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Border Background="#d9dfe7"
            CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <TextBlock FontWeight="Bold"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">Thông tin bảo hiểm</TextBlock>

            <Grid Grid.Row="1"
                  Margin="10,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Margin="0,0,10,0" 
                           FontWeight="Normal" FontSize="14" 
                           Text="Mã bảo hiểm" TextAlignment="Right" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Mã nhân viên" TextAlignment="Right" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Ngày cấp số" TextAlignment="Right" VerticalAlignment="Center"/>


                <TextBox x:Name="maBHTbx" Style="{StaticResource InputTextBox}" IsEnabled="False"  Grid.Column="1" Grid.Row="0" Loaded="maBHTbx_Loaded"/>
                <ComboBox x:Name="maNVCbx" IsEnabled="False" ItemsSource="{Binding Path=DefaultView}"  Grid.Column="1" Grid.Row="1"
                          FontSize="17" FontWeight="Normal"/>
                <TextBox x:Name="ngayCapTbx" Style="{StaticResource InputTextBox}" IsEnabled="False" Grid.Column="1" Grid.Row="2"/>


                <TextBlock Grid.Row="0" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Nơi cấp số" TextAlignment="Right" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Ghi chú" TextAlignment="Right" VerticalAlignment="Center"/>

                <TextBox x:Name="noiCapTbx" Style="{StaticResource InputTextBox}" IsEnabled="False" Grid.Column="3" Grid.Row="0"/>
                <TextBox x:Name="ghiChuTbx" Style="{StaticResource InputTextBox}" IsEnabled="False" Grid.Column="3" Grid.Row="1"/>

            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Background="Red"
                        x:Name="btnHuy"
                        Click="btnHuy_Click"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="150" Height="40" Margin="40,30,10,30">Hủy</Button>
            </Grid>
        </Grid>
    </Border>
</Window>
