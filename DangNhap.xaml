<Window x:Class="QuanLyNhanVien.DangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanVien"
        mc:Ignorable="d"
        Title="DangNhap" Height="600" Width="840"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent" 
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">

    <Border Background="#efefef"
            CornerRadius="20"
            x:Name="MainBorder">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock       
            Margin="35,20,0,0"
            FontSize="25"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <Run
                FontWeight="SemiBold"
                Text="Quản lý"
                Foreground="Black"/>
            <Run
                FontWeight="SemiBold"
                Text="Nhân sự"
                Foreground="#5ad3b5"/>
            </TextBlock>

            <StackPanel VerticalAlignment="Top"
                            HorizontalAlignment="Right" 
                            Orientation="Horizontal">

                <Button Style="{StaticResource OptionButtonTheme}" 
                        Click="MinimizedButton_Click">
                    <Image Height="30" Source="/Images/MinusButton.png" RenderTransformOrigin="0.484,0.137"/>
                </Button>

                <Button Style="{StaticResource OptionButtonTheme}" 
                        Click="CloseButton_Click">
                    <Image Height="30" Source="/Images/XButton.png"/>
                </Button>

            </StackPanel>


            <Grid Grid.Row="1"
                  Width="400"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Margin="70">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <!--UserName-->
                    <RowDefinition Height="80"/>
                    <!--Account-->
                    <RowDefinition Height="80"/>
                    <!--Password-->
                    <RowDefinition Height="100"/>
                    <!--Button-->
                    <RowDefinition Height="80"/>
                    <!--Note-->
                </Grid.RowDefinitions>

                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="30">
                    <Run
                        FontWeight="SemiBold"
                        Text="Welcome to, "/>
                    <Run
                        Text="..."
                        Foreground="#FF01A3ff"
                        FontWeight="Bold"
                        x:Name="tblUserName"/>
                </TextBlock>

                <TextBox x:Name="taiKhoanTbx" Grid.Row="1"
                         Style="{StaticResource AccountBoxTheme}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Top"
                         Foreground="Black"
                         FontSize="15" KeyDown="Login_KeyDown">
                    <TextBox.Effect>
                        <DropShadowEffect ShadowDepth="4"
                          Direction="330"
                          Color="Black"
                          Opacity="0.2"
                          BlurRadius="4"/>
                    </TextBox.Effect>
                </TextBox>

                <PasswordBox x:Name="matKhauPwb" Grid.Row="2"
                             FontSize="15"
                             VerticalAlignment="Top"
                             HorizontalAlignment="Center"
                             Style="{StaticResource PassWordBoxTheme}"
                             Padding="15,15,15,15" KeyDown="Login_KeyDown">
                    <PasswordBox.Effect>
                        <DropShadowEffect ShadowDepth="4"
                          Direction="330"
                          Color="Black"
                          Opacity="0.2"
                          BlurRadius="4"/>
                    </PasswordBox.Effect>
                </PasswordBox>

                <Button Grid.Row="3"
                        Content="Quên mật khẩu?"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Margin="10,16,0,62"
                        Click="btnQuenMK_Click"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center" Height="22">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="{TemplateBinding Content}" />
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Row="3"
                        Width="150" Height="50"
                        FontSize="17"
                        Content="Đăng nhập"
                        FontWeight="SemiBold"
                        Foreground="White"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Right"
                        Click="btnDangNhap_Click"
                        Style="{StaticResource WindowButtonTheme}">

                </Button>

                <TextBlock Grid.Row="4"
                           Text="Ghi chú:"
                           HorizontalAlignment="Center"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,60"
                           Foreground="Gray"/>

                <TextBlock Grid.Row="4"
                           Margin="10,20"
                           Text="Không nên chia sẻ tên đăng nhập, mật khẩu cho người khác."
                           HorizontalAlignment="Center"
                           FontSize="12" Width="380"
                           TextAlignment="Center"
                           Foreground="Gray"/>
            </Grid>
        </Grid>
    </Border>
</Window>
