<Window x:Class="QuanLyNhanVien.WindowView.ChiTietNhanVienForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyNhanVien"
        mc:Ignorable="d"
        Title="DangNhap" Height="600" Width="600"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent" 
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Border Background="#d9dfe7"
            BorderThickness="2"            
            CornerRadius="20" BorderBrush="#3cb4b5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <TextBlock FontWeight="Bold"
                       FontSize="20"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center">Thông tin nhân viên</TextBlock>

            <Grid Grid.Row="1"
                  Margin="10,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Mã nhân viên" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Phòng" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Họ tên" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Ngày sinh" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Giới tính" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="5" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Dân tộc" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="6" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="CMND_CCCD" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="7" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Nơi cấp" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="8" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Mã lương" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="9" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Ghi chú" TextAlignment="Left" VerticalAlignment="Center"/>

                <TextBlock x:Name="maNVTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="1" Grid.Row="0" TextAlignment="Left" VerticalAlignment="Center" Loaded="Textblocks_Loaded"/>
                <TextBlock x:Name="phongTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="1" Grid.Row="1" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="tenTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="1" Grid.Row="2" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="ngaySinhTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="1" Grid.Row="3" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="gioiTinhTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="1" Grid.Row="4" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="danTocTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="1" Grid.Row="5" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="cccdTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="1" Grid.Row="6" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="noiCapTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="1" Grid.Row="7" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="maLuongTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="1" Grid.Row="8" TextAlignment="Left" VerticalAlignment="Center"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Chức vụ" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Loại nhân viên" TextAlignment="Right" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Loại hợp đồng" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Thời gian" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="4" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Ngày ký" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="5" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Ngày hết hạn" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="6" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Số điện thoại" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="7" Grid.Column="2" Margin="0,0,10,0" FontWeight="Normal" FontSize="14" 
                           Text="Học vấn" TextAlignment="Left" VerticalAlignment="Center"/>


                <TextBlock x:Name="chucVuTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="3" Grid.Row="0" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="loaiNVTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="3" Grid.Row="1" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="loaiHopDongTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="3" Grid.Row="2" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="thoiGianTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="3" Grid.Row="3" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="ngayKyTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="3" Grid.Row="4" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="ngayHetHanTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="3" Grid.Row="5" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="soDienThoaiTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="3" Grid.Row="6" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="hocVanTbk" FontWeight="SemiBold" FontSize="14" Grid.Column="3" Grid.Row="7" TextAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="ghiChuTbx" FontWeight="SemiBold" FontSize="14" Grid.Row="9" TextAlignment="Left" Margin="90,4,10,5" VerticalAlignment="Stretch" IsReadOnly="True" Style="{StaticResource InputTextBox}" Grid.ColumnSpan="4"/>

            </Grid>

            <Grid Grid.Row="2" Height="100" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="2"
                        Grid.ColumnSpan="2"
                        Background="Red"
                        x:Name="huyBtn"
                        Click="huyBtn_Click"
                    Style="{StaticResource WindowButtonTheme}"
                    Width="150" Height="40" Margin="25,0,25,0" VerticalAlignment="Center">Hủy</Button>
            </Grid>
        </Grid>
    </Border>
</Window>
